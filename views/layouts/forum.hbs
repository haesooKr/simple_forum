<div class="forum">
  <h3>게시판</h3>
  <div class="thread-header">
    <div>글번호</div>
    <div>제목</div>
    <div>작성자</div>
    <div>조회수</div>
    <div>추천수</div>
    <div>날짜</div>
  </div>
  {{#each thread}}
  <a href="/read/{{this.THREAD_NUM}}">
    <div class="thread">
      <div class="upper">
        <div class="thread-num">{{this.THREAD_NUM}}</div>
        <div class="thread-subject">{{this.THREAD_SUBJECT}}</div>
      </div>
      <div class="lower">
        <div class="thread-writer">{{this.THREAD_WRITER}}</div>
        <div class="thread-hits"><span>view: </span>{{this.THREAD_HITS}}</div>
        <div class="thread-likes"><span>like: </span>{{this.THREAD_LIKE}}</div>
        <div class="tread-date">{{this.INS_DATE}}</div>
      </div>
    </div>
  </a>
  {{/each}}
  <div class="forum-footer">
    <a href="/write">글쓰기</a>
  </div>
</div>