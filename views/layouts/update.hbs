<div class="dbForm">
  <form action="/update/{{thread.THREAD_NUM}}" method="POST">
    <div class="line"><label for="writer">작성자: </label><input type="text" name="writer" placeholder="작성자" value={{thread.THREAD_WRITER}}></div>
    <div class="line"><label for="subject">제목: </label><input type="text" name="subject" placeholder="제목" value={{thread.THREAD_SUBJECT}}></div>
    <textarea name="content" style="display: none;">{{thread.THREAD_CONTENT}}</textarea>
    <div id="editor">
    </div>
    <button type="submit">수정</button>
  </form>

</div>


